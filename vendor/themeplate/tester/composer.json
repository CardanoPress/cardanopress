{
	"name": "themeplate/tester",
	"description": "Common for all packages",
	"license": "GPL-3.0-only",
	"authors": [
		{
			"name": "Gene Alyson Fortunado Torcende",
			"email": "genealyson.torcende@gmail.com"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"require": {
		"php": "^7.4|^8.0",
		"brain/monkey": "^2.6",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.2|^1.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpstan/phpstan": "^1.6",
		"phpunit/phpunit": "^9.5",
		"squizlabs/php_codesniffer": "^3.6",
		"symfony/console": "^5.4",
		"symfony/process": "^5.4",
		"themeplate/cli": "^0.1.0",
		"wp-coding-standards/wpcs": "^2.3",
		"yoast/phpunit-polyfills": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"ThemePlate\\Tester\\": "src"
		},
		"files": [
			"./commands.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"ThemePlate\\Tester\\Tests\\": "tests"
		}
	}
}
